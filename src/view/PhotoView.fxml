<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<BorderPane prefHeight="640.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PhotoController">
   <top>
      <HBox prefHeight="50.0" spacing="20" alignment="CENTER" style="-fx-background-color: #EEE;">
         <children>
            <Button fx:id="backButton" text="Back" onAction="#handleBackButton"/>
            <Label text="Photo View" style="-fx-font-size: 20px; -fx-text-fill: #333;">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogoutButton"/>
         </children>
         <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
         </padding>
      </HBox>
   </top>
   <center>
      <StackPane prefHeight="320.0" prefWidth="480.0">
         <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="450.0" preserveRatio="true"/>
      </StackPane>
   </center>
   <bottom>
      <VBox spacing="10" padding="15">
         <children>
            <HBox spacing="15">
               <Button fx:id="previousButton" text="Previous" onAction="#handlePreviousButton"/>
               <Button fx:id="nextButton" text="Next" onAction="#handleNextButton"/>
            </HBox>
            <GridPane hgap="10" vgap="10">
               <Label text="Photo name:" gridPaneColumnIndex="0"/>
               <Label fx:id="photoNameText" gridPaneColumnIndex="1"/>
               <Label text="Caption:" gridPaneRowIndex="1" gridPaneColumnIndex="0"/>
               <Label fx:id="captionText" gridPaneRowIndex="1" gridPaneColumnIndex="1"/>
               <Label text="Date taken:" gridPaneRowIndex="2" gridPaneColumnIndex="0"/>
               <Label fx:id="dateTakenText" gridPaneRowIndex="2" gridPaneColumnIndex="1"/>
            </GridPane>
            <HBox spacing="10">
               <TextField fx:id="tagTypeField" promptText="Tag Type"/>
               <TextField fx:id="tagValueField" promptText="Tag Value"/>
               <Button fx:id="addTagButton" text="Add" onAction="#handleAddTagButton"/>
               <Button fx:id="deleteTagButton" text="Delete" onAction="#handleDeleteTagButton"/>
            </HBox>
            <ListView fx:id="tagsList" prefHeight="100.0"/>
         </children>
      </VBox>
   </bottom>
</BorderPane>
