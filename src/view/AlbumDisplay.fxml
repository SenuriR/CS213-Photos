<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="640.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PhotoAlbumController">
   <top>
      <VBox prefHeight="200.0" prefWidth="480.0" spacing="10" padding="10">
         <children>
            <HBox spacing="10">
               <children>
                  <Button onAction="#backToGallery" text="Back" />
                  <Label fx:id="labelAlbumName" text="Album Title" style="-fx-font-weight: bold; -fx-font-size: 18;">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnLogout" onAction="#logout" text="Log Out" />
               </children>
            </HBox>
            <HBox spacing="5">
               <children>
                  <Label text="Album:" />
                  <TextField fx:id="fieldAlbumName" prefWidth="200.0" />
                  <Button fx:id="btnAddPhoto" text="Add Photo" onAction="#addPhoto" />
                  <Button fx:id="btnDeletePhoto" text="Remove Photo" onAction="#deletePhoto" />
               </children>
            </HBox>
            <HBox spacing="5">
               <children>
                  <Button fx:id="btnOpenPhoto" text="View Photo" onAction="#openPhoto" />
                  <Button fx:id="btnEditCaption" text="Edit Caption" onAction="#editCaption" />
                  <TextField fx:id="fieldCaption" prefWidth="200.0" placeholder="Enter caption..." />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ListView fx:id="listViewPhotos" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
